html(lang='en')
  head
    title #{locals.title || "Namely Leads"}
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/bower/angular-material/angular-material.min.css')
    script(src='/bower/angular/angular.min.js')
    script(src='/bower/angular-animate/angular-animate.min.js')
    script(src='/bower/angular-aria/angular-aria.min.js')
    script(src='/bower/angular-messages/angular-messages.min.js')
    script(src='/bower/angular-material/angular-material.min.js')
    script(src='/leadsApp.js')

  body(ng-app='LeadsApp', ng-cloak='')
    md-toolbar(
      class="md-tall",
      layout="row",
      layout-padding,
      layout-align="start center"
    )
      h2( class="md-toolbar-tools")
        span #{locals.title || "Namely Leads"}
        div(flex)
        if locals.user
          span Welcome, #{locals.user}

    block content
